<!-- app/views/carts/checkout.html.erb -->
<h1>Checkout</h1>

<%= form_with model: @order, url: place_order_cart_path, local: true do |form| %>
  <div>
    <%= form.label :province_id, "Province" %>
    <%= form.collection_select :province_id, @provinces, :id, :name, include_blank: "Select your province" %>
  </div>
  <div>
    <%= form.label :address, "Address" %>
    <%= form.text_area :address %>
  </div>
  <div>
    <%= form.submit "Place Order" %>
  </div>
<% end %>
