<h1>Your Shopping Cart</h1>

<% if @order_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td>
            <%= form_with model: item, url: update_item_cart_path(item), method: :patch, local: true do |f| %>
              <%= f.number_field :quantity, value: item.quantity %>
              <%= f.submit 'Update' %>
            <% end %>
          </td>
          <td><%= number_to_currency(item.product.price) %></td>
          <td>
            <%= link_to 'Remove', remove_item_cart_path(item), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>Total: <%= number_to_currency(@order_items.sum { |item| item.total_price }) %></h2>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

<%= link_to 'Continue Shopping', root_path, class: 'btn btn-primary' %>
