<!-- app/views/devise/registrations/edit.html.erb -->
<%= form_with model: resource, as: resource_name, url: registration_path(resource_name), local: true, html: { method: :put } do |form| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= form.label :email %><br />
    <%= form.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= form.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= form.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %><br />
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= form.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= form.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= form.label :address %><br />
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :province_id, "Province" %><br />
    <%= form.collection_select :province_id, Province.all, :id, :name, include_blank: "Select your province" %>
  </div>

  <div class="actions">
    <%= form.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" } %></p>
