<h1><%= @product.name %></h1>

<p><strong>Description:</strong></p>
<p><%= @product.description %></p>

<p><strong>Price:</strong></p>
<p><%= number_to_currency(@product.price) %></p>

<p><strong>Quantity available:</strong></p>
<p><%= @product.quantity_available %></p>

<p><strong>Artisan:</strong></p>
<p><%= @product.artisan.name %></p>

<p><strong>Categories:</strong></p>
<ul>
  <% @product.categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>


<% if @product.image.attached? %>
  <!-- Thumbnail size (100x100) -->
  <div class="thumbnail">
    <%= image_tag @product.image.variant(resize_to_fill: [100, 100]), alt: "#{@product.name} Thumbnail" %>
  </div>

  <!-- Medium size (300x300) -->
  <div class="medium">
    <%= image_tag @product.image.variant(resize_to_limit: [300, 300]), alt: "#{@product.name} Medium" %>
  </div>

  <!-- Large size (800x800) -->
  <div class="large">
    <%= image_tag @product.image.variant(resize_to_limit: [800, 800]), alt: "#{@product.name} Large" %>
  </div>
<% else %>
  <p>No image available</p>
<% end %>



<%= form_with url: add_item_cart_product_path(@product), method: :post do |form| %>
  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, value: 1, min: 1 %>
  </div>
  <%= form.hidden_field :product_id, value: @product.id %>
  <%= form.submit 'Add to Cart' %>
<% end %>


<%= link_to 'View Cart', cart_path, class: 'btn btn-primary' %>
<%= link_to 'Edit', edit_product_path(@product), class: 'btn btn-secondary' %>
<%= link_to 'Back', products_path, class: 'btn btn-secondary' %>
