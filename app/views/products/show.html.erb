<h1><%= @product.name %></h1>
<p><strong>Description:</strong></p>
<p><%= @product.description %></p>

<p><strong>Price:</strong></p>
<p><%= @product.price %></p>
<p><strong>Quantity available:</strong></p>
<p><%= @product.quantity_available %></p>
<p><strong>Artisan:</strong></p>
<p><%= @product.artisan.name %></p>
<p><strong>Categories:</strong></p>
<ul>
  <% @product.categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
  <% end %>
</ul>

<% if @product.image.attached? %>
  <%= image_tag @product.image %>
<% else %>
  <p>No image added</p>
<% end %>

<%= form_with url: add_item_cart_product_path(@product), method: :post do %>
  <div class="field">
    <%= label_tag :quantity %>
    <%= number_field_tag :quantity, 1, min: 1 %>
  </div>
  <div class="actions">
    <%= submit_tag 'Add to Cart' %>
  </div>
<% end %>

<%= link_to 'View Cart', order_path, class: 'btn btn-primary' %>

<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Back', products_path %>