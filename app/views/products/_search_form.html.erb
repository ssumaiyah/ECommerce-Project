<%= form_with url: search_products_path, method: :get, local: true do |form| %>
  <div>
    <%= form.text_field :search, params[:search], placeholder: "Search Products" %>
  </div>
  <div>
    <%= form.collection_select :category_id, @categories, :id, :name, include_blank: "All Categories" %>
  </div>
  <div>
    <%= form.submit "Search" %>
  </div>
<% end %>
