<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav>
      <div class="container">
        <%= link_to "Home", root_path, class: "navbar-brand" %>
        <button type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Products", products_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Categories", categories_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Artisans", artisans_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class: "nav-link" %>
            </li>
          </ul>
          <%= form_with(url: search_products_path, method: :get, local: true) do |form| %>
            <div class="form-inline">
              <%= form.label :search, "Search Products", class: "sr-only" %>
              <%= form.text_field :search, class: "form-control mr-sm-2", placeholder: "Search", value: params[:search] %>
              <%= form.label :category_id, "Category", class: "sr-only" %>
              <%= form.collection_select :category_id, Category.all, :id, :name, { include_blank: "All Categories" }, { class: "form-control mr-sm-2" } %>
              <%= form.submit "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
            </div>
          <% end %>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
